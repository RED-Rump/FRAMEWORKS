<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0" 
      xmlns="http://javafx.com/javafx/25" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.example.TriviaClient.controllers.LoginController">
   
   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
   </padding>
   
   <children>
      <Label alignment="TOP_CENTER" contentDisplay="TOP" 
             style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-weight: bold;" 
             text="ðŸŽ® Trivia Game" />
      
      <Label contentDisplay="TOP" 
             style="-fx-text-fill: #ecf0f1; -fx-font-size: 14px;" 
             text="Enter your details to join" />
      
      <VBox alignment="CENTER" maxWidth="350.0" spacing="15.0">
         <children>
            <VBox spacing="10.0">
               <children>
                  <Label style="-fx-text-fill: white;" text="Username:" />
                  <TextField fx:id="usernameField" promptText="Enter username" 
                           style="-fx-pref-height: 35px; -fx-font-size: 14px;" />
               </children>
            </VBox>
            
            <VBox spacing="10.0">
               <children>
                  <Label style="-fx-text-fill: white;" text="Server Host:" />
                  <TextField fx:id="hostField" promptText="localhost" 
                           style="-fx-pref-height: 35px; -fx-font-size: 14px;" 
                           text="localhost" />
               </children>
            </VBox>
            
            <VBox spacing="10.0">
               <children>
                  <Label style="-fx-text-fill: white;" text="Port:" />
                  <TextField fx:id="portField" promptText="5555" 
                           style="-fx-pref-height: 35px; -fx-font-size: 14px;" 
                           text="5555" />
               </children>
            </VBox>
         </children>
      </VBox>
      
      <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLogin" 
              style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-pref-height: 40px; -fx-cursor: hand;" 
              text="Connect &amp; Login" />
      
      <Label fx:id="statusLabel" wrapText="true" 
             style="-fx-text-fill: #e74c3c; -fx-font-size: 12px;" />
   </children>
   
   <style>
      -fx-background-color: #2c3e50;
   </style>
</VBox>