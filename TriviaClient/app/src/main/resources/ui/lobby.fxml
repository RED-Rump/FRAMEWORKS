<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="500.0" prefWidth="800.0" spacing="20.0" 
      xmlns="http://javafx.com/javafx/25" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.example.TriviaClient.controllers.LobbyController">
   
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   
   <children>
      <!-- Header -->
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;" 
                   text="ðŸ  Game Lobby" />
            <Label fx:id="usernameLabel" 
                   style="-fx-text-fill: #3498db; -fx-font-size: 16px;" />
         </children>
      </HBox>
      
      <!-- Rooms Table -->
      <VBox spacing="10.0" VBox.vgrow="ALWAYS">
         <children>
            <Label style="-fx-text-fill: white; -fx-font-size: 18px;" 
                   text="Available Game Rooms" />
            
            <TableView fx:id="roomsTable" prefHeight="300.0">
    <columns>
        <TableColumn fx:id="roomIdColumn" prefWidth="100.0" text="Room ID" />
        <TableColumn fx:id="roomNameColumn" prefWidth="200.0" text="Room Name" />
        <TableColumn fx:id="playersColumn" prefWidth="100.0" text="Players" />
        <TableColumn fx:id="statusColumn" prefWidth="150.0" text="Status" />
    </columns>
</TableView>
         </children>
      </VBox>
      
      <!-- Buttons -->
      <HBox alignment="CENTER" spacing="20.0">
         <children>
            <Button fx:id="refreshButton" mnemonicParsing="false" onAction="#handleRefresh" 
                    style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 120px; -fx-pref-height: 40px;" 
                    text="ðŸ”„ Refresh" />
            
            <Button fx:id="createButton" mnemonicParsing="false" onAction="#handleCreate" 
                    style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 120px; -fx-pref-height: 40px;" 
                    text="âž• Create Room" />
            
            <Button fx:id="joinButton" mnemonicParsing="false" onAction="#handleJoin" 
                    style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-size: 14px; -fx-pref-width: 120px; -fx-pref-height: 40px;" 
                    text="ðŸšª Join Room" />
         </children>
      </HBox>
   </children>
   
   <style>
      -fx-background-color: #34495e;
   </style>
</VBox>