<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" 
      xmlns="http://javafx.com/javafx/21" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.example.TriviaClient.controllers.GameController">
   
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   
   <children>
      <!-- Game Header -->
      <Label fx:id="questionLabel" wrapText="true" 
             style="-fx-text-fill: white; -fx-font-size: 18px;" 
             text="Question will appear here" />
      
      <Label fx:id="timerLabel" 
             style="-fx-text-fill: #f39c12; -fx-font-size: 16px;" 
             text="Time: 30s" />
      
      <ProgressBar fx:id="timerProgressBar" prefWidth="400.0" progress="1.0" />
      
      <!-- Options Container -->
      <VBox fx:id="optionsContainer" spacing="10.0">
         <children>
            <RadioButton text="Option 1" />
            <RadioButton text="Option 2" />
            <RadioButton text="Option 3" />
            <RadioButton text="Option 4" />
         </children>
      </VBox>
      
      <!-- Submit Button -->
      <Button fx:id="submitButton" mnemonicParsing="false" onAction="#handleSubmitAnswer" 
              style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-size: 16px; -fx-pref-width: 200px;" 
              text="Submit Answer" />
   </children>
   
   <style>
      -fx-background-color: #2c3e50;
   </style>
</VBox>